<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />

  <script src="/vendor/jquery-3.0.0.js"></script>

  <script defer src="/scripts/app.js"></script>
</head>
<%- include('partials/header') %>

  <body>
    <div class="wrapper">
      <div class="createEventContainer">
        <h2>Event Information</h2>
        <form class="newEventForm" method="post" action="/createEvent">

          <label for="title">Title</label>
          <input type="text" name="title" />
          <label for="description">Description</label>
          <input type="text" name="description" />
          <label for="location">Location</label>
          <input type="text" name="location" />
          <label for="date">Date</label>
          <input id="date" type="date" name="date" value="" min=<% new Date().toLocaleDateString('en-ca') %> />
          <%- include('partials/timeSlots') %>

            <h3>Your Information</h3>
            <label for="name">Name</label>
            <input type="text" name="name" />
            <label for="email">Email</label>
            <input type="email" name="email" />
            <label for="phone">Phone (Optional)</label>
            <input type="number" name="phone" />

            <button> Create your event! </button>
        </form>

      </div>
      <!-- LEFT FLOAT -->
      <section id="leftBodyContainerMain">

        <!-- LOGIN -->
        <% if (!events) { %>
          <div class="loginAndRegistration">
            <div class="loginContainer">
              <form class="login" method="POST" action="/login">
                <p>Login</p>
                <label for="Email">Email</label>
                <input id="loginEmail" type="email" name="email">
                <label id="loginPassword" for="Password">Password</label>
                <input type="password" name="password" />
                <button type="submit">Submit</button>
              </form>
            </div>

            <!-- REGISTER -->
            <div class="registerContainer">
              <form class="register" method="POST" action="/register">
                <p>Register</p>
                <label for="name">name</label>
                <input type="text" name="name" />
                <label for="email">Email</label>
                <input id="registerEmail" type="email" name="email" />
                <label id="registerPassword" for="password">Password</label>
                <input type="password" name="password" />
                <button type="submit">Submit</button>
              </form>
            </div>
          </div>
          <% } else { %>
            <p></p>
            <% } %>
              <!-- CREATE EVENT -->
              <% if (events !==null) { %>
                <div class="createEventContainer">
                  <h2>Please provide the details for your event</h2>
                  <form class="newEventForm">
                    <label for="title">What would you like to name your event?</label>
                    <input type="text" name="title" />
                    <label for="location">Where will it be located?</label>
                    <input type="text" name="location" />
                    <!-- Put a checkbox for physical location or virtual.
        If virtual, have a new input drop down that takes a link
        and asks the host to create a password for the event -->
                    <label for="date">When will it take place?</label>
                    <!-- Figure out how to put in the current date in value.
          Input type "date" creates a calendar box the user can select from-->
                    <input id="date" type="date" name="date" value="" min=<% new Date().toLocaleDateString('en-ca') %>
                    />
                    <label for="startTime">When will the event start?</label>
                    <input id="startTime" type="time" name="startTime" />
                    <label id="endTime" for="endTime">When will it end?</label>
                    <input type="time" name="endTime" />
                    <button> submit </button>
                  </form>
                </div>
                <% } else { %>
                  <p>nothing</p>
                  <% } %>
                    <!-- CONTACT INFO -->
