<!DOCTYPE html>
<html lang="en">

<head>
    <title>Home Page</title>

    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
    <link rel="stylesheet" href="/vendor/border-box.css" />
    <link rel="stylesheet" href="/styles/eventPlaceHolder.css" />
    <link rel="stylesheet" href="/styles/layout.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script defer src="/scripts/app.js"></script>
</head>

<body>
    <%- include('partials/header') %>
        <div class="wrapper">
            <main>
                <div class="eventTitleContainer">
                    <h1>
                        <%= event.title %>
                    </h1>
                    <div class="eventDescription">
                        <p>
                            <%= event.description %>
                        </p>
                    </div>

                    <section class="contactInfo">
                        <ul>
                            <h4>Host Details</h4>
                            <li class="hostName">
                                <%= event.hostname %>
                            </li>
                            <li class="hostPhone">
                                <%= event.phone %>
                            </li>
                            <li class="hostEmail">
                                <%= event.email %>
                            </li>
                        </ul>
                    </section>
            </main>

            <aside class="eventDateAndLocation">
                <form action="user/create" class="userForm">
                    <p>name</p>
                    <!-- <label for="name">name</label> -->
                    <input type="text" name='name'>
                    <!-- <label for="email">email</label> -->
                    <p>email</p>
                    <input type="email" name='email'>
                <button>submit</button>
        </aside>
    </div>
    <div class="content">USERINFO</div>
    <p>thing</p>
    <input type="text" />
</form>

</body>
<script>
    $(document).ready(function () {
        $('.inviteeResponse').hide()
    })
</script>

</html>